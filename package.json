{
  "name": "head-first-design-patterns-ts",
  "version": "1.0.0",
  "description": "Head First Design Patterns example implementations in TypeScript",
  "scripts": {
    "start": "ts-node",
    "lint:es": "eslint '**/*.{ts,tsx}'",
    "lint:es:fix": "eslint '**/*.{ts,tsx}' --ext .ts --fix",
    "lint:etc": "prettier '**/*.{js,ts,tsx,json,yaml,md}' --check",
    "lint:etc:fix": "prettier '**/*.{js,ts,tsx,json,yaml,md}' --write",
    "lint": "npm run lint:es && npm run lint:etc",
    "lint:fix": "npm run lint:es:fix && npm run lint:etc:fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "typescript",
    "ts",
    "head-first-design-patterns",
    "design-patterns"
  ],
  "author": "litsynp",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
